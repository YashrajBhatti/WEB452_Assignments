@model MvcBike.Models.BikeRatingViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a> |
    <a asp-action="Hidden">See Hidden Bikes</a> | 
    <a asp-action="DeleteAll">Delete All Bikes</a>
    
</p>


<form asp-controller="Bikes" asp-action="Index" method="get">
    <p>
        <select name="bikeRating">
            <option value="">All</option>
            <option value="">Model</option>
            <option value="SearchRating">Rating</option>
        </select>

        Model: <input type="text" name="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>


<form asp-action="HideSelected">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <strong> Select </strong>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["ModelSort"]" 
                    asp-route-searchString="@ViewData["SearchModel"]" asp-route-bikeRating="@ViewData["SearchCompany"]"> Model</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSort"]" 
                    asp-route-searchString="@ViewData["SearchModel"]" asp-route-bikeRating="@ViewData["SearchCompany"]">@Html.DisplayNameFor(model => model.Bikes[0].LaunchDate)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CompanySort"]" 
                    asp-route-searchString="@ViewData["SearchModel"]" asp-route-bikeRating="@ViewData["SearchCompany"]">@Html.DisplayNameFor(model => model.Bikes[0].Company)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSort"]"
                    asp-route-searchString="@ViewData["SearchModel"]" asp-route-bikeRating="@ViewData["SearchCompany"]">@Html.DisplayNameFor(model => model.Bikes[0].Price)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSort"]"
                    asp-route-searchString="@ViewData["SearchModel"]" asp-route-bikeRating="@ViewData["SearchCompany"]">@Html.DisplayNameFor(model => model.Bikes[0].CC)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["RatingSort"]"
                    asp-route-searchString="@ViewData["SearchRating"]" asp-route-bikeRating="@ViewData["SearchCompany"]">@Html.DisplayNameFor(model => model.Bikes[0].Rating)</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Bikes)
            {
                <tr>
                    <td>
                        <input type="checkbox" value="@item.Id" name="selectedBikes">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LaunchDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Hide Selected Bikes" class="btn btn-warning" />
</form>




